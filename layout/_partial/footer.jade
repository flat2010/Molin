#footer
  .footer-info
    p
      if theme.baidusitemap
        a(href=config.root+"baidusitemap.xml")= __("baidusitemap")
        |  |  
      if theme.feed
        a(href=config.root+"atom.xml")= __("rss")
        |  |  
      a(href=config.root+"about/")= __("about")
      //- span 联系博主：
      //-   a.fa.fa-email(href="mailto:#{theme.about.email}",target="_blank") 
      //-   a.fa.fa-weibo(href="#{theme.about.weibo_url}",target="_blank")
      //-   a.fa.fa-github(href="#{theme.about.github_url}",target="_blank")
    // 首页底部显示网站总字数
    if theme.post_wordcount.total_words == true
      p 本站博客总字数：
        i=totalcount(site) + ' ' + __('total_counts')
    if theme.busuanzi == true
      p 本站访客总数：
        i#busuanzi_container_site_uv
          i#busuanzi_value_site_uv
        | 次
      p 文章总阅读次数：
        i#busuanzi_container_site_pv
          i#busuanzi_value_site_pv
        | 次
    p
      span  Copyright &copy;
        a(href=url_for('.'), rel='nofollow')= (config.author || config.title) + '.'
      span  Theme by
        a(rel='nofollow', target='_blank', href='https://github.com/flat2010/Molin')  Molin.
      if theme.busuanzi == true
        span  Count by
          a(href="https://busuanzi.ibruce.info/")  busuanzi.
      span  Powered by
        a(rel='nofollow', target='_blank', href='https://hexo.io')  Hexo.
